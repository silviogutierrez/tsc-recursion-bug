{
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es6",
        "jsx": "react",
        "skipLibCheck": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es6",

            "es2016.array.include",
            "es2018.promise",
            "es2017.object",
            "es2019.object",
            "es2019.array",
            "es2020.string"
        ]
    },
    "include": ["./client/**/*"]
}
